<h3 class="form-header">{{localize "COF.ui.properties"}}</h3>
<input class="field-value" name="data.key" type="hidden" value="{{item.data.key}}" placeholder="{{ localize "COF.ui.key" }}" data-dtype="String">

<div class="form-group stacked">
    <label>Type</label>
    <div class="form-fields">
        <label class="checkbox"><input type="checkbox" name="data.properties.profile" {{checked data.properties.profile}}> {{localize "COF.properties.profile"}}</label>
        <label class="checkbox"><input type="checkbox" name="data.properties.prestige" {{checked data.properties.prestige}}> {{localize "COF.properties.prestige"}}</label>
        <label class="checkbox"><input type="checkbox" name="data.properties.alternative" {{checked data.properties.alternative}}> {{localize "COF.properties.alternative"}}</label>
        <label class="checkbox"><input type="checkbox" name="data.properties.racial" {{checked data.properties.racial}}> {{localize "COF.properties.racial"}}</label>
        <label class="checkbox"><input type="checkbox" name="data.properties.creature" {{checked data.properties.creature}}> {{localize "COF.properties.creature"}}</label>
    </div>
</div>

<ol class="inventory-list">
    <li class="inventory-header flexrow">
        <h3 class="item-name flexrow">{{localize "COF.ui.capacities"}}</h3>
        <div class="item-detail"></div>
        <div class="item-detail item-rank">{{localize "COF.ui.rank"}}</div>
        <div class="item-controls">
            <a class="item-control item-create cof-compendium-pack" data-pack="capacities" data-open="0" title="Ajouter une capacitÃ©"><i class="fas fa-plus"></i>&nbsp; Aj.</a>
        </div>
    </li>
    {{#each data.capacities as |capacity id|}}
    <ol class="item-list">
        <li class="item flexrow" data-item-id="{{capacity._id}}" data-item-type="capacity" draggable="true">
            <div class="item-name flexrow">
                <div class="item-image" style="background-image: url('{{capacity.img}}')"></div>
                <h4>{{capacity.name}}</h4>
            </div>
            <div class="item-detail"></div>
            <div class="item-detail item-rank">{{add id 1}}</div>
            <div class="item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
        </li>
    </ol>
    {{/each}}
</ol>
