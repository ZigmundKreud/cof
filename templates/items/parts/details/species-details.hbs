<h3 class="form-header">Ressources</h3>

<ol class="inventory-list">
    <li class="inventory-header flexrow">
        <h3 class="item-name flexrow">Voies raciales</h3>
        <div class="item-detail"></div>
        <div class="item-detail item-rank">Rang</div>
        <div class="item-detail item-scope">Application</div>
        <div class="item-controls">
            <a class="item-control item-create compendium-pack" data-pack="cof.paths" data-open="0" title="Ajouter une voie"><i class="fas fa-plus"></i>&nbsp; Add</a>
        </div>
    </li>
    {{#each (getEmbeddedItems "path" data.paths) as |path id|}}
        <ol class="item-list">
            <li class="item flexrow" data-item-id="{{path._id}}" data-item-type="path" data-key="{{path.data.key}}" draggable="true">
                <div class="item-name flexrow">
                    <div class="item-image" style="background-image: url('{{path.img}}')"></div>
                    <h4>{{path.name}}</h4>
                </div>
                <div class="item-detail"></div>
                <div class="item-detail item-rank">{{add id 1}}</div>
                <div class="item-detail item-scope">{{#if path.data.scope}} {{localize (concat "COF.ui." path.data.scope)}}{{/if}}</div>
                <div class="item-controls">
                    <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                </div>
            </li>
        </ol>
    {{/each}}

    <li class="inventory-header flexrow">
        <h3 class="item-name flexrow">Capacités raciales</h3>
        <div class="item-detail"></div>
        <div class="item-detail item-rank">Rang</div>
        <div class="item-detail item-scope">Application</div>
        <div class="item-controls">
            <a class="item-control item-create compendium-pack" data-pack="cof.capacities" data-open="0" title="Ajouter une capacité"><i class="fas fa-plus"></i>&nbsp; Add</a>
        </div>
    </li>
    {{#each (getEmbeddedItems "capacity" data.capacities) as |capacity id|}}
        <ol class="item-list">
            <li class="item flexrow" data-item-id="{{capacity._id}}" data-item-type="capacity" data-key="{{capacity.data.key}}" draggable="true">
                <div class="item-name flexrow">
                    <div class="item-image" style="background-image: url('{{capacity.img}}')"></div>
                    <h4>{{capacity.name}}</h4>
                </div>
                <div class="item-detail"></div>
                <div class="item-detail item-rank">{{add id 1}}</div>
                <div class="item-detail item-scope">{{#if capacity.data.scope}} {{localize (concat "COF.ui." capacity.data.scope)}}{{/if}}</div>
                <div class="item-controls">
                    <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                </div>
            </li>
        </ol>
    {{/each}}
</ol>
