<ol class="item-list">
    <li class="item effect flexrow" data-effect-id="{{_id}}" draggable="true">
        <div class="item-name flexrow">
            <div class="item-image" style="background-image: url('{{icon}}')"></div>
            <h4>{{label}}</h4>
        </div>
        <div class="item-detail">
            {{#if duration.rounds}}{{duration.rounds}} rounds{{/if}}
            {{#if duration.turns}}{{duration.rounds}} turns{{/if}}
            {{#if duration.seconds}}{{duration.rounds}} seconds{{/if}}
            {{#if isTemporary}}(T)){{/if}}
        </div>
        <div class="item-detail">
        {{#if disabled}}
            <a class="item-control effect-disable" title="Activer" style="color:lightgray;"><i class="fas fa-toggle-off"></i></a>
        {{else}}
            <a class="item-control effect-disable" title="DÃ©sactiver"><i class="fas fa-toggle-on"></i></a>
        {{/if}}
        </div>
        <div class="item-controls">
            <a class="item-control effect-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control effect-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
    </li>
</ol>
